{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["ES2020", "ES2021.Promise", "DOM"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }